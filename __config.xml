<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.jmgk.wifiir" version="1.1.6" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>WifiIR</name>
    <description>Android controller for ESP8266-based IR controller over WIFI</description>
    <author email="contato@jmgk.com.br" href="http://jmgk.com.br">JMGK Team</author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <icon density="mdpi" height="57" platform="android" src="www/icon.png" width="57" />
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:usesCleartextTraffic="true" />
    </edit-config>
</widget>
